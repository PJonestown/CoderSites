<div class="jumbotron">
  <h1>The Camp Sites Directory</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>

      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>

        <td><%= post.created_at.to_date %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-info' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Post', new_post_path, class: 'btn btn-primary' %>